%h2
  User
=simple_form_for(@user, :url => admin_user_path) do |f|

  %h3 General
  = f.input :last_name
  = f.input :first_name
  = f.input :email
  = f.association :role

  %h3 Address
  =f.input :road
  =f.input :apt_number
  =f.input :city
  =f.input :province
  =f.input :postal_code

  %h3 Other
  =f.input :gender
  =f.input :dob

  =f.button :submit
