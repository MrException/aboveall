!!! Strict
%html
  %head
    %title
      = @title
      \- Above All
    = csrf_meta_tags
    = render 'layouts/stylesheets'
  %body
    .container
      .header.span-24
        = render 'layouts/header'
      .span-24
        - if ! flash.empty?
          %section
            - flash.each do |name, msg|
              = content_tag :div, msg, :class => "flash #{name}" if msg.is_a?(String)
        = render 'layouts/tabs'
        #main.span-24.last
          = yield
      - if Rails.env.development?
        .span-24
          = debug(params)
