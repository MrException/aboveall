%html
%head
  %title
    = @title
    \- Above All
  = stylesheet_link_tag 'blueprint/screen', :media => 'screen'
  = stylesheet_link_tag 'blueprint/print', :media => 'print'
  = stylesheet_link_tag    'application'
  = javascript_include_tag 'application' 
  = csrf_meta_tags
  /[if lt IE 8]
    = stylesheet_link_tag 'blueprint/ie'
%body
  .container
    .header.span-24
      .span-6
        - imgprops = { :alt => 'Above All', :width => '400', :height => '160' }
        = link_to image_tag('logo.png', imgprops), root_path
      .span-6.last.prepend-12.nav-links
        = link_to 'Sign In', '#'
    .span-24
      %ul#tab-nav
        %li= link_to 'Home', root_path
        %li= link_to 'About', about_path
      .content.span-23.last
        = yield
