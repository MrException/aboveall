= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :picture
    = f.text_field :picture
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :hidden
    = f.check_box :hidden
  .actions
    = f.submit 'Save'
