= render 'products/nav'
.content.span-20.last
  #product-description
    %p#notice= notice

    %p
      = image_tag @product.image.url(:medium)
    %p
      %b Title:
      = @product.title
    %p
      %b Description:
      = @product.description
    %p
      %b Price:
      = @product.price
    %p
      %b Unit:
      = @product.unit
    %p
      %b Hidden:
      = @product.hidden

    - if can? :edit, @product
      = link_to 'Edit', edit_product_path(@product)
      \|
    = link_to 'Back', products_path
