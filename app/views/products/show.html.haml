= render 'products/nav'
#product-description
  %h2#title
    = @product.title
    - if can? :edit, @product
      \|
      = link_to 'Edit', edit_product_path(@product)
  #image
    = image_tag @product.image.url(:medium)
  %p#description
    = @product.description
  #button
    = button_to 'Add To Cart', product_line_items_path(product_id: @product)
  %p#price
    %b Price:
    = @product.price
  %p#unit
    %b Unit:
    = @product.unit
